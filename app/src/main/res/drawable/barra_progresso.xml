<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo com a Borda -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fundo branco -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Borda preta -->
            <corners android:radius="8dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>

    <!-- Progresso não preenchido (intermediário) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#DBDBDB" /> <!-- Cinza intermediário -->
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>

    <!-- Progresso atual -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#4CAF50" /> <!-- Verde para o progresso -->
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>
