<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivityActivity">

<!--    tela de adicionar atividade-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:text="DATA DO DIA"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_turma"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@drawable/bordas"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableTint="@color/black"
            android:focusable="false"
            android:hint="Turma"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_materia"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@drawable/bordas"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableTint="@color/black"
            android:focusable="false"
            android:hint="Matéria"
            android:padding="8dp" />

        <EditText
            android:id="@+id/et_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="44dp"
            android:background="@drawable/bordas"
            android:hint="Conteudo"
            android:padding="8dp" />


        <EditText
            android:id="@+id/et_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bordas"
            android:gravity="top"
            android:textColor="@color/black"
            android:hint="Descrição"
            android:minLines="10"
            android:padding="8dp" />


        <Button
            android:id="@+id/btn_adicionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="Adicionar"
            android:textColor="@android:color/black" />
=
    </LinearLayout>

</ScrollView>