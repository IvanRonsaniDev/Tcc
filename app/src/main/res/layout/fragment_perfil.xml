<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!--    tela de perfil do usuario-->

    <com.google.android.material.card.MaterialCardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="64dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">

        <TextView
            android:id="@+id/tvIniciaisNome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLength="2"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="WW" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/perfil_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="NOME DO ALUNO"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/perfil_turma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="3-53 / equipe"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/perfil_matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="4550732482"
        android:textSize="16sp" />

    <!-- Opções do Menu -->
    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:text="Alterar Senha"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:text="SAIR"
        android:textColor="@color/black" />

    <!-- Link para mudança de curso -->
    <TextView
        android:id="@+id/change_course_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Quero mudar de Curso!"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
